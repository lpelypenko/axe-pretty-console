{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2015",
        "lib": ["es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "inlineSourceMap": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "strict": true,
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "include": ["src/**/*.ts", "types/**/*.d.ts", "test/**/*.ts"],
    "exclude": ["node_modules/**"]
}
